<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="edu.just.reservation.manage.teacher.entity.Teacher" table="teacher">
        <id name="id" type="java.lang.String">
            <column name="id" length="32"/>
            <generator class="uuid.hex" />
        </id>
        <property name="account" type="java.lang.String">
            <column name="account" length="20" />
        </property>
        <property name="name" type="java.lang.String">
            <column name="name" length="20" />
        </property>
        <property name="proTitle" type="java.lang.String">
            <column name="pro_title" length="20"/>
        </property>
        <property name="state" type="java.lang.String">
            <column name="state" length="10"/>
        </property>
        <many-to-one name="user" unique="true" column="userId"></many-to-one>
    </class>
</hibernate-mapping>